{
  "manifest_version": 3,
  "name": "Task Automator Pro",
  "version": "3.5",
  "description": "Record, edit, and replay browser tasks with a persistent side panel, full page screenshots, and live actions.",
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "alarms",
    "scripting",
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "sidePanel",
    "offscreen",
    "unlimitedStorage",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  },
  "action": {
    "default_title": "Open Task Automator"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
